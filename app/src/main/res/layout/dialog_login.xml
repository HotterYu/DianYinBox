<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#50000000"
    >

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/style_item_bg_frame"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:id="@+id/my_alert_dialog_bg"
        >

        <TextView
            android:id="@+id/tv_dialog_name_edit_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_blue_on"
            android:textSize="@dimen/title_text_size"
            android:paddingLeft="10dp"
            android:padding="10dp"
            android:background="@color/white"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            android:text="店音系统登录："
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@color/text_blue_on"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:padding="18dp"
            >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_off"
                android:textSize="@dimen/small_text_size"
                android:text="请输入唯一激活码（必须）："
                />

            <EditText
                android:id="@+id/et_login_dialog_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="@color/text_blue_on"
                android:textStyle="bold"
                android:padding="8dp"
                android:hint="@string/code_input_hint"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_off"
                android:textSize="@dimen/small_text_size"
                android:layout_marginTop="10dp"
                android:text="请输入门店名称（不输入默认为编号）："
                />
            <EditText
                android:id="@+id/et_login_dialog_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="@color/text_black_on"
                android:textStyle="bold"
                android:padding="8dp"
                android:hint="@string/name_input_hint"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_error_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/color_red"
            android:textSize="@dimen/small_text_size"
            android:layout_marginBottom="4dp"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@color/spacebar"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingBottom="1dp"
            android:background="@color/center_bg"
            >
            <Button
                android:id="@+id/btn_dialog_name_edit_left"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:textSize="16sp"
                android:textColor="@color/text_black_on"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/sel_item_bg"
                android:text="取消"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@color/spacebar"
                />
            <Button
                android:id="@+id/btn_dialog_name_edit_right"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:textSize="16sp"
                android:textColor="@color/text_blue_on"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/sel_item_bg"
                android:text="登录"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>